<%= form_with(model: task, local: true) do |form| %>
    
    <% if task.errors.any? %>
        <div id="error_explanation">
            <ul>
                <% task.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    
    <%= form.label :content, "タスク内容" %>
    <%= form.text_field :content %>
    
    <%= form.label :status, "ステータス" %>
    <%= form.text_field :status %>
    
    <%= form.submit "投稿" %>
    
<% end %>